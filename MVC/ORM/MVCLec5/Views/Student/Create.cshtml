@model Student
@{
    //Layout = "~/views/shared/_Layout2.cshtml";
    ViewBag.title = "Student Create";
}



    <form method="post">
        <!--Show all errors in one place-->
        <!--
        <div asp-validation-summary="All"></div>
        -->
        <!--with each propert indivudualy-->
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Name" placeholder="Name" />
        <span asp-validation-for="Name"></span> <br />
        <input asp-for="Age" placeholder="Age"/>
        <span asp-validation-for="Age"></span> <br />
        <input asp-for="Email" placeholder="Email"/>
        <span asp-validation-for="Email"></span> <br />
        <input asp-for="Username" placeholder="Username" />  
        <span asp-validation-for="Username"></span> <br />
        <input asp-for="Password" placeholder="Password" /> <br />
        <input asp-for="CPassword" placeholder="CPassword" />
        <span asp-validation-for="CPassword"></span> <br />
    <select asp-for="DeptNo" asp-items="ViewBag.depts">
        <option>Select Department</option>
    </select>
    <span asp-validation-for="DeptNo"></span>
        <input type="submit" value="Add" />
    </form>

