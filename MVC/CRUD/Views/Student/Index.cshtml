@model IEnumerable<Student>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
</head>
<body>
    <a asp-action="Create" asp-controller="Student"  class="btn btn-success"> Add Student </a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @*Html code*@
            @if(Model.Count() == 0){
                <tr>
                    <td colspan="5">No Student Exists</td>
                </tr>
            }

            else{
                // C# code
                foreach(var student in Model){
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.Name</td>
                        <td>@student.Age</td>
                        <td><img src="/images/@student.Stdimg" width="50" height="50"></td>
                        <td>
                            <a asp-action="Details" asp-controller="Student" asp-route-id = "@student.Id" class="btn btn-success">Details</a>
                           @*Are you sure ?, from side of client not server*@
                            <a onclick="return confirm(' Are you sure ? ')" asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                            <a asp-action="edit" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="changeImage" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-success">change Image</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
       
    </table>

</body>
</html>
